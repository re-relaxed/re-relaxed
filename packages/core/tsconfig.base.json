{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "checkJs": true,
    "allowJs": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"]
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["./src/**/*.spec.ts", "node_modules", "dist"]
}
